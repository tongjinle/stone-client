/* components/goods-item/goods-item.wxss */

.goods-item {
  padding: 20rpx 0;
  width: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid #fff;
}

.goods-item .goods-image image {
  width: 240rpx;
  height: 240rpx;
  border: 1px solid #fff;
}
.goods-item .goods-name{
  font-size: 28rpx;
}
.goods-item .goods-price{
  font-size: 28rpx;
}
.goods-item .goods-btn{
  background: #2d8cf0;
  color: #fff;
  font-size: 28rpx;
  line-height: 40rpx;
  height: 40rpx;
  text-align: center;
  width: 140rpx;
}