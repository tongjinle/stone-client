/* pages/personal/personal.wxss */
.personal-header{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.personal-header  .personal-avatar{
  width: 240rpx;
  height: 240rpx;
  overflow: hidden;
  border-radius: 50%;
  border:10rpx #888 solid;
  margin: 40rpx 0;
}
.personal-avatar image{
  width: 100%;
  height: 100%;
}
.personal-header .personal-name{
  color: #ffcd32;
}

.personal-list{
  margin-top: 160rpx;
}

.personal-list .personal-wrapper {
  width: 640rpx;
  margin: 0 auto;
}
.personal-list .personal-item{
  margin-bottom: 40rpx;
}
.personal-list .exchange{
  color: #ffcd32;
  font-size: 32rpx;
  text-decoration: underline;
}
.modal-body{
  width: 540rpx;
  height: 100rpx;
  border-radius: 8rpx;
  border: 1px solid #ffcd32;
  padding-top: 50rpx;
  position: fixed;
  background: #fff;
  top: 50%;
  left:50%;
  transform: translate3d(-50%,-50%,0);
}
.close-btn{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: 0;
  top: 0;
}
.modal-input{
  height: 50rpx;
  line-height: 50rpx;
  width: 90%;
  margin: 0 auto;
  border: 1px solid #ffcd32; 
}