/* pages/personal/personal.wxss */
.personal-header{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.personal-header  .personal-avatar{
  width: 240rpx;
  height: 240rpx;
  overflow: hidden;
  border-radius: 50%;
  border:10rpx #888 solid;
  margin: 40rpx 0;
}
.personal-avatar image{
  width: 100%;
  height: 100%;
}
.personal-header .personal-name{
  color: #ffcd32;
}

.personal-list{
  margin-top: 160rpx;
}

.personal-list .personal-wrapper {
  width: 640rpx;
  margin: 0 auto;
}
.personal-list .personal-item{
  margin-bottom: 40rpx;
}
.personal-list .exchange{
  color: #ffcd32;
  font-size: 32rpx;
  text-decoration: underline;
}